<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp" packages="">
    <!-- Docs: https://logging.apache.org/log4j/2.x/manual/appenders.html#ConsoleAppender -->
    <!-- As one might expect, the ConsoleAppender writes its output to either System.out or System.err
         with System.out being the default target. A Layout must be provided to format the LogEvent. -->
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
